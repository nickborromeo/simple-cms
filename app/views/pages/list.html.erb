<% @page_title = "Page List"%>

<div  class="page list">
	<h2>Pages</h2>
	
	<%= link_to("Add a new Page", {:action => 'new'}, :class => 'action new')%>
	
	<table class="listing" summary="Page list">
		<tr class="header">
			<th>&nbsp</th>
			<th>Subject</th>
			<th>Page</th>
			<th>Permalink</th>
			<th>Visible</th>
			<th>Actions</th>
		</tr>
		
		<% @pages.each do |page|%>
		<tr>
			<td><%= page.position %></td>
			<td><%= page.subject_id %></td>
			<td><%= page.name %></td>
			<td><%= page.permalink %></td>
			<td class="center"><%= status_tag(page.visible) %></td>
			<td class="actions">
				<%= link_to("Show", {:action => 'show', :id => 								page.id}, :class => 'action show')%>
				<%= link_to("Edit", {:action => 'edit', :id => 								page.id}, :class => 'action edit')%>
				<%= link_to("Delete", {:action => 'delete', :id => 							page.id}, :class => 'action delete')%>
			</td>
			
		</tr>
		<% end %>
	</table>
		
	
</div>