<!DOCTYPE html PUBLIC "=//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html/loose.dtd">

<html lang='en'>
	<head>
		<meta http-equiv="Content-Type" content='text/html; charset=utf-8'>
		<title>Simple CMS | <%= @page_title || 'Admin Area' %></title>
		<meta name="author" content="Nick Borromeo">
		<!-- HTML WAY
		<link href="/assets/stylesheets/admin.css" rel="stylesheet" type="text/css" media="all" /> 
		<script src="/javascript/applications.js" type="text/javascript"></script>-->
		<!-- RAILS WAY-->
		<%= stylesheet_link_tag('public', 'admin', :media => 'all')%>
		<%= javascript_include_tag('application')%>
	</head>
	
	<body>
		<div id="header">
			<h1>Simple CMS Admin</h1>
		</div>
		<div id="main">
			<% if !flash[:notice].blank? %>
			<div class="notice">
				<%= flash[:notice] %>
			</div>
			<%end%>
			
			<div id="content">
				<%= yield %>
			</div>
		</div>
		<div id="footer">
			<p id="copyright">&copy; embarcadero.com / Nick Borromeo </p>
		</div>
	</body>
		
</html>